<p style="color: green"><%= notice %></p>

<div class="text-center p-10 bg-black mb-6">
  <h1 class="font-extrabold text-7xl text-orange-500">Posts</h1>
</div>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post, class: "underline" %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path, class: "underline" %>
